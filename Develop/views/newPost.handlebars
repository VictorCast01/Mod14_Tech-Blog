<h2 id="new-post-title">New Post</h2>

<form class="form signup-form">
    <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" />
    </div>
    <div class="form-group">
        <label for="post-text">Post Text: </label>
        <textarea class="form-input" type="text" id="post-text" /></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" id="post" type="submit">Post</button>
    </div>
</form>



<script src="/js/post.js"></script>